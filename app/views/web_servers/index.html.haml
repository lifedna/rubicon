- if @web_servers.blank?
  %p None
- else
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th
        %th Short Name
        %th Description
    %tbody
      - @web_servers.each do |ws|
        %tr
          %td
            = link_to "", web_server_path( ws ), :alt => 'view', :class => 'icon-file'
            = link_to "", edit_web_server_path( ws ), :alt => 'edit', :class => 'icon-pencil'
            = link_to "", ws, confirm: 'Are you sure?', method: :delete, :alt => 'delete', :class => 'icon-trash'
          %td= ws.short_name
          %td= ws.description


= content_for :nav_bar_sub do
  %li.btn= link_to 'New', new_web_server_url
