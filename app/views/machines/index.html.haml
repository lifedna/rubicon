- if @machines.blank?
  %p None
- else
  %table.table.table-striped.table-condensed
    %thead
      %tr
        %th
        %th DNS Name
        %th Description
        %th IP Address
    %tbody
      - @machines.each do |machine|
        %tr
          %td
            = link_to "", machine_path( machine ), :alt => 'view', :class => 'icon-file'
            = link_to "", edit_machine_path( machine ), :alt => 'edit', :class => 'icon-pencil'
            = link_to "", machine, confirm: 'Are you sure?', method: :delete, :alt => 'delete', :class => 'icon-trash'
          %td= machine.dns_name
          %td= machine.description
          %td= machine.ip_address


= content_for :nav_bar_sub do
  %li.btn= link_to 'New', new_machine_url
